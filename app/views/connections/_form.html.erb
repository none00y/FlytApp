<% case local_assigns[:action] %>
<% when "new" %>
  <% @connection ||= Connection.new %>
  <%= simple_form_for @connection, url: connections_path(@connection), remote: true do |form| %>
    <%= form.association :airfield_a, label_method: :name  %>
    <%= form.association :airfield_b, label_method: :name %>  
    <%= form.submit t(".confirm") %>  
  <% end %>
<% when "edit" %>
  <%= simple_form_for @connection, remote: true do |form| %>
    <%= form.association :airfield_a, label_method: :name  %>
    <%= form.association :airfield_b, label_method: :name %>  
    <%= form.submit t(".confirm") %>  
  <% end %>
<% end %>