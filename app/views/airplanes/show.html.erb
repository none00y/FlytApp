<%= t(".airplane_connection", description: @airplane.connection.description ) %>
<%= t(".airplane_id", id: @airplane.id ) %>
<%= t(".airplane_identifier", identifier: @airplane.identifier ) %>
<%= t(".airplane_flight_speed", flight_speed: @airplane.flight_speed ) %>
<%= t(".distance_travelled_percentage", percentage: @airplane.get_percentage_of_distance_travelled ) %>
<%= t(".airplane_departure_day", departure_day: @airplane.departure_day) %>
<%= t(".airplane_departure_time", departure_time: @airplane.get_proper_departure_time) %>
<%= t(".airplane_state", state: @airplane.state) %>
<%= t(".airplane_passenger_capacity", passenger_capacity: @airplane.passenger_capacity) %>
<%= button_to t(".edit"), edit_airplane_path(@airplane), method: :get %>
<%= button_to t(".delete"), airplane_path(@airplane), method: :delete %>