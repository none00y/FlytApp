<% case local_assigns[:action] %>
  <% when "list" %>
    document.getElementById("passenger-list").innerHTML = "<%= j render partial: "passengers/passenger_list", locals: {action: "list"} %>";
  <% when "new" %>
    document.getElementById("passenger-form").innerHTML = "<%= j render partial: "passengers/form", locals: {action: "new"} %>";
  <% when "edit" %>
    document.getElementById("passenger-form").innerHTML = "<%= j render partial: "passengers/form", locals: {action: "edit"} %>";
<% end %>
