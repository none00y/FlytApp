<div id="passenger-list">  
  <% @passengers.each do |passenger| %>
  <div>
    <%= t(".passenger_last_name", last_name: passenger.last_name ) %>
    <%= t(".passenger_first_name", first_name: passenger.first_name ) %>
    <%= button_to t(".edit"), edit_passenger_path(passenger), method: :get if can? :edit, :passengers%>
    <%= button_to t(".delete"), passenger_path(passenger), method: :delete if can? :delete, :passengers %>
  </div>
  <% end %>
</div>